<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="navbar-header">
        @Html.ActionLink("Anagram Solver", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
    </div>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <div class="nav-item nav-link">@Html.ActionLink("Home", "Index", "Home")</div>
      <div class="nav-item nav-link">@Html.ActionLink("Words", "DisplayWords", "Words")</div>
      <div class="nav-item nav-link">@Html.ActionLink("Add word", "SaveNewWord", "Words")</div>
    </div>
  </div>
</nav>
<div class="container body-content">
    @RenderBody()
</div>

@await RenderSectionAsync("scripts", required: false)
</body>
</html>