@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AnagramSolver.WebApp.Models.AnagramModel

@{
    ViewBag.Title = "Add word";
}

<form asp-controller="SaveWord" asp-action="SaveNewWord" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    Word to add:
    <input type="text" asp-for="Input"/><br/>
    <span asp-validation-for="Input" class="text-danger">@ViewBag.SaveStatus</span><br/>
    <button type="submit">Add</button>
</form>
